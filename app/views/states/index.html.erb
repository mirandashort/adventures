<body>
  <p id="notice"><%= notice %></p>

  <h1>States</h1>

  <%= link_to 'New State', new_state_path %>
  <%= link_to 'Home', index_path %>
  <%= link_to 'About', about_path %>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Capital</th>
        <th>Population</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @states.each do |state| %>
        <tr>
          <td><%= state.id %></td>
          <td><%= state.name %></td>
          <td><%= state.capital %></td>
          <td><%= number_to_human(state.population) %></td>
          <td><%= link_to 'Show', state %></td>
          <td><%= link_to 'Edit', edit_state_path(state) %></td>
          <td><%= link_to 'Destroy', state, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</body>

<footer></footer>
