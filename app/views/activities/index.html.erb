<body>
  <p id="notice"><%= notice %></p>

  <h1>Activities</h1>

  <%= link_to 'New Activity', new_activity_path %>
  <%= link_to 'Home', index_path %>
  <%= link_to 'About', about_path %>

  <table>
    <thead>
      <tr>
        <th></th>
        <th>Name</th>
        <th>Cost</th>
        <th>Payment Interval</th>
        <th>Duration</th>
        <th>Duration Interval</th>
        <th colspan="5"></th>
      </tr>
    </thead>

    <tbody>
      <% @activities.each do |activity| %>
        <tr>
          <td><%= activity.id %></td>
          <td><%= activity.name %></td>
          <td><%= number_to_currency(activity.cost) %></td>
          <td><%= activity.payment_interval %></td>
          <td><%= activity.duration %></td>
          <td><%= activity.duration_interval %></td>
          <td><%= link_to 'Show', activity %></td>
          <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
          <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</body>
